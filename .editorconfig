root = true

# すべてのファイルに適用される基本設定
[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Goファイルに特化した設定
[*.go]
indent_style = space
indent_size = 4
tab_width = 4

# JSONファイルに特化した設定
[*.json]
indent_style = space
indent_size = 2
tab_width = 2

# Markdownファイルに特化した設定
[*.md]
indent_style = space
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
